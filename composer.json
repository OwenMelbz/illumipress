{
    "name": "owenmelbz/illumipress",
    "description": "Simple wrapper for the illuminate support, http response, request, validation classes and blade templating for WordPress",
    "type": "library",
    "require": {
        "illuminate/http": "5.*",
        "illuminate/validation": "5.*",
        "kitetail/zttp": "^0.3.0",
        "illuminate/view": "5.*",
        "illuminate/cache": "5.*",
        "illuminate/encryption": "^5.6"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Owen",
            "email": "owenmelbz@gmail.com"
        }
    ],
    "autoload": {
        "files": [
            "./src/Validator.php",
            "./src/Response.php",
            "./src/Request.php",
            "./src/BladeFactory.php",
            "./src/Blade.php",
            "./src/Cache.php",
            "./src/Encryption.php",
            "./src/helpers.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "scripts": {
        "checks": [
          "find . -name '*.orig' -delete",
          "phpcbf ./src --standard=PSR2",
          "php7cc ./src",
          "phpunit",
          "git status"
        ]
    }
}
